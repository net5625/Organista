<UserControl x:Class="Organista.Views.SaveWork"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Organista.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Label Style="{StaticResource ResourceKey=Title}" Content="Generuj sprawozdanie" />
        </DockPanel>
        
        <Label Grid.Row="1" Grid.Column="0" Content="Data początkowa:" />
        <Label Grid.Row="2" Grid.Column="0" Content="Data końcowa:" />
        
        <!--Kolumna 2-->
        <DatePicker TabIndex="0" Grid.Row="1" Grid.Column="1" />
        <DatePicker TabIndex="1" Grid.Row="2" Grid.Column="1" />

        <Button TabIndex="2" Grid.Row="3" Grid.Column="2" Content="Generuj" Margin="15,15,15,15"/>
    </Grid>
</UserControl>
